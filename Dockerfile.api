FROM node:20-alpine

WORKDIR /app

# Instalar dependÃªncias do sistema
RUN apk add --no-cache openssl

# Copiar arquivos de dependÃªncia
COPY api/package*.json ./

# Instalar dependÃªncias
RUN npm ci --only=production && npm cache clean --force

# Copiar Prisma schema da raiz
COPY prisma ./prisma/

# Gerar Prisma Client
RUN npx prisma generate

# Copiar cÃ³digo fonte da API
COPY api/src ./src/
COPY api/tsconfig.json ./

# Copiar seed.ts
COPY prisma/seed.ts ./prisma/

# Expor porta
EXPOSE 4000

# Script de inicializaÃ§Ã£o
COPY <<'EOF' /app/start.sh
#!/bin/sh
set -e

echo "ðŸ”„ Aplicando schema no banco (prisma db push)..."
npx prisma db push --skip-generate

echo "ðŸŒ± Executando seed..."
npx tsx prisma/seed.ts || echo "âš ï¸ Seed falhou ou jÃ¡ executado"

echo "ðŸš€ Iniciando API..."
exec npx tsx src/index.ts
EOF

RUN chmod +x /app/start.sh

CMD ["/app/start.sh"]
