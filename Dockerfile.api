# Central de Ferramentas - Forbiz & GetWork - API
# ============================================================

FROM node:20-alpine

WORKDIR /app

# Instalar depend√™ncias do sistema
RUN apk add --no-cache openssl bash

# Copiar arquivos de depend√™ncia
COPY api/package*.json ./

# Instalar depend√™ncias
RUN npm install --production && npm cache clean --force

# Copiar Prisma schema da raiz
COPY prisma ./prisma/

# Gerar Prisma Client
RUN npx prisma generate

# Copiar c√≥digo fonte da API
COPY api/src ./src/
COPY api/tsconfig.json ./

# Copiar seed.ts
COPY prisma/seed.ts ./prisma/

# Criar script de inicializa√ß√£o
RUN echo '#!/bin/sh' > /app/start.sh && \
    echo 'set -e' >> /app/start.sh && \
    echo '' >> /app/start.sh && \
    echo 'echo "üîÑ Aplicando schema no banco (prisma db push)..."' >> /app/start.sh && \
    echo 'npx prisma db push --skip-generate' >> /app/start.sh && \
    echo '' >> /app/start.sh && \
    echo 'echo "üå± Executando seed..."' >> /app/start.sh && \
    echo 'npx tsx prisma/seed.ts || echo "‚ö†Ô∏è Seed falhou ou j√° executado"' >> /app/start.sh && \
    echo '' >> /app/start.sh && \
    echo 'echo "üöÄ Iniciando API..."' >> /app/start.sh && \
    echo 'exec npx tsx src/index.ts' >> /app/start.sh && \
    chmod +x /app/start.sh

# Expor porta
EXPOSE 4000

# Comando de inicializa√ß√£o
CMD ["/bin/sh", "/app/start.sh"]
